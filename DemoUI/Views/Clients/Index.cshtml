@model List<Client>

@{
    Layout = "_CustomLayout";
    ViewBag.Title = "Client Index";
}


<div class="card">
    <div class="card-header">
        Clients Listing ...
    </div>
    <div class="card-body">

        <div class="row text-dark">
            <div class="col">
                <table id="example" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Id</th>
                            <th>FirstName</th>
                            <th>LastName</th>
                            <th>DOB</th>
                            <th>Address</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Gender</th>
                        </tr>
                    </thead>

                </table>
            </div>
        </div>

    </div>
</div>








@section Scripts
{
